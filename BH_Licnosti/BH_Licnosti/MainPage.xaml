<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BH_Licnosti.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout BackgroundColor="#f6f6f6">
        <Frame BackgroundColor="#4d79ff" CornerRadius="20" Margin="0, -20, 0, 0">
            <Label HorizontalTextAlignment="Center" FontAttributes="Bold" Text="POZNATE LIČNOSTI BOSNE I HERCEGOVINE" TextColor="White" FontSize="30" Padding="0, 10, 0, 0"/>
        </Frame>
        <Frame Margin="0, 50, 0, 0"  CornerRadius="300" BorderColor="Yellow">
            <Image Source="https://upload.wikimedia.org/wikipedia/commons/thumb/0/06/Coat_of_arms_of_Kingdom_of_Bosnia.svg/399px-Coat_of_arms_of_Kingdom_of_Bosnia.svg.png" HorizontalOptions="Center" WidthRequest="300" HeightRequest="300"/>
        </Frame>
        <Button x:Name="toCategories" Text="Nastavi" BackgroundColor="#4d79ff" TextColor="White" HorizontalOptions="CenterAndExpand" FontSize="24" HeightRequest="50" VerticalOptions="Center" CornerRadius="10" Margin="0, 50, 0 ,0" WidthRequest="210" FontAttributes="Bold" Clicked="toCategories_Clicked"/>
    </StackLayout>

</ContentPage>
