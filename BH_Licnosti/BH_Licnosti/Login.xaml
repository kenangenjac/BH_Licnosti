<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BH_Licnosti.Login">
    <StackLayout VerticalOptions="CenterAndExpand" Padding="20,20,20,150" Spacing="15">
        <Image Source="https://upload.wikimedia.org/wikipedia/commons/thumb/0/06/Coat_of_arms_of_Kingdom_of_Bosnia.svg/399px-Coat_of_arms_of_Kingdom_of_Bosnia.svg.png" Margin="0,30,0,60"/>

        <Entry x:Name="email_Login" Placeholder="Email" TextColor="Black" FontAttributes="Bold" PlaceholderColor="Black" ClearButtonVisibility="WhileEditing" />

        <Entry x:Name="password_Login" Placeholder="Password" IsPassword="True" TextColor="Black" FontAttributes="Bold" PlaceholderColor="Black" ClearButtonVisibility="WhileEditing"></Entry>

        <Frame Padding="0" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="White" Margin="0,30,0,0" CornerRadius="60">
            <Button x:Name="loginBtn" Clicked="loginBtn_Clicked" BackgroundColor="#f6f6f6" Text="Login" TextColor="Black" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" WidthRequest="250"></Button>
        </Frame>

        <Button x:Name="registerBtn" Clicked="registerBtn_Clicked" Padding="0,-15,0,0" BackgroundColor="Transparent" Text="Don't have an account? Sign Up" TextColor="Blue" TextTransform="None"></Button>
    </StackLayout>
</ContentPage>